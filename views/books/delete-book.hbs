<nav>
  <a href="/books">
    <figure>
      <img src="http://www.uglydogbooks.com/wp-content/uploads/2014/04/books.jpg">
      <figcaption>
        <h1>Books</h1>
      </figcaption>
    </figure>
  </a>
  <a href="/authors">
    <figure>
      <img src="http://az616578.vo.msecnd.net/files/2016/03/12/635934148383695904190770395_writrrr.jpg">
      <figcaption>
        <h1>Authors</h1>
      </figcaption>
    </figure>
  </a>
</nav>

<main class="book">
  <section class="delete">
    <a href="/books/{{book.id}}">
      <img class="this-img" src="{{book.cover_url}}">
    </a>
    <div class="info">
      <h2>{{book.title}}</h2>
      <h4>By:<br>
        {{#each this.authors}}
          <a href="/authors/{{author_id}}">{{first_name}} {{last_name}}</a><br>
        {{/each}}
      </h4>
      <p class="genre">{{book.name}}</p>
      <p class="description">{{book.description}}</p>
    </div>
  </section>
  <a href="/books/{{book.book_id}}/delete-book">
    <button class="delete-btn">
      Delete {{book.title}}?
    </button>
  </a>
</main>
