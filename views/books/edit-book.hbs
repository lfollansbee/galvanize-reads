<nav>
  <a href="/books">
    <figure class="vertical">
      <i class="fa fa-bookmark fa-3x"></i>
      <figcaption>
        <h1>Books</h1>
      </figcaption>
    </figure>
  </a>
  <a href="/authors">
    <figure class="vertical">
      <i class="fa fa-user fa-3x"></i>
      <figcaption>
        <h1>Authors</h1>
      </figcaption>
    </figure>
  </a>
</nav>

<section class="book">
  <h3>Edit {{book.title}}</h3>
  <form action="/books/{{book.id}}/edit" method="post" class="edit-book">

    <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{book.title}}">

    <label for="genre">Genre</label>
      <select id="genre" name="genre_id">
        <option value="{{book.genres_id}}" selected>{{book.name}}</option>
        {{#each this.genres}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>

    <label for="cover_url">Cover Image URL</label>
      <input type="url" id="cover_url" name="cover_url" value="{{book.cover_url}}">

    <label for="description">Description</label>
      <textarea rows="5" id="description" name="description" value="{{book.description}}">{{book.description}}</textarea>

      <label>Authors</label>
      <ul class="books-author">
      {{#each this.authors}}
        <li>
          {{first_name}} {{last_name}}
        </li>
      {{/each}}
      </ul>
      
    <button type="submit">Update</button>
  </form>
</section>
