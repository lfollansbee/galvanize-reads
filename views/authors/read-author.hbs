<nav>
  <a href="/books">
    <figure class="vertical">
      <i class="fa fa-bookmark fa-3x"></i>
      <figcaption>
        <h1>Books</h1>
      </figcaption>
    </figure>
  </a>
  <a href="/authors">
    <figure class="vertical">
      <i class="fa fa-user fa-3x"></i>
      <figcaption>
        <h1>Authors</h1>
      </figcaption>
    </figure>
  </a>
</nav>

<section class="author">
  <section class="read">
    <a href="/authors/{{author.id}}">
      <img class="this-img" src="{{author.portrait_url}}">
    </a>
    <div class="info">
      <div class="headings">
        <h2>{{author.first_name}} {{author.last_name}}</h2>
        <a href="/authors/{{author.id}}/edit">
          <i class="fa fa-pencil"></i>
        </a>
        <a href="/authors/{{author.id}}/delete">
          <i class="fa fa-remove"></i>
        </a>
      </div>
      <p class="bio">{{author.bio}}</p>
      <h4>Books</h4>
      <ul class="author-books">
        {{#each this.books}}
          <a href="/books/{{book_id}}"><li>{{title}}</li>
          </a>
        {{/each}}
      </ul>
    </div>
  </section>
</section>
