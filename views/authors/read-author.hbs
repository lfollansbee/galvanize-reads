<main class="author">
  <section class="read">
    <a href="/authors/{{author.id}}">
      <img class="this-img" src="{{author.portrait_url}}">
    </a>
    <div class="info">
      <div class="headings">
        <h2>{{author.first_name}} {{author.last_name}}</h2>
        <a href="/books/{{author.id}}/edit">
          <i class="fa fa-pencil"></i>
        </a>
        <a href="/books/{{author.id}}/delete">
          <i class="fa fa-remove"></i>
        </a>
      </div>
      <p class="bio">{{author.bio}}</p>
      <h4>Books</h4>
      <ul class="author-books">
        <li>Book 1</li>
        <li>Book 2</li>
        <li>Book 3</li>
      </ul>
    </div>
  </section>
</main>
