<section class="book">
  {{#each book}}
  <article class="book-list">
      <img class="book-cover" src="{{cover_url}}">
    <div class="book-info">
      <h2>{{title}}</h2>
      <h4>By (Author)</h4>
      <p class="genre">{{name}}</p>
      <p class="description">{{description}}</p>
    </div>
  </article>
  {{/each}}
  <a href="/books/new"><button>Add a Book</button></a>
</section>
